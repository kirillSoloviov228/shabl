<Page x:Class="shabl.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:shabl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Start">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="159"/>
            <ColumnDefinition Width="486"/>
            <ColumnDefinition Width="155"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="52"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="86"/>
            <RowDefinition Height="69"/>
            <RowDefinition Height="74"/>
            <RowDefinition Height="104"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="3" Grid.Column="1" Content="Авторизоваться" Click="Button_LogIn"/>
        <Button Grid.Row="5" Grid.Column="1"  Content="Мероприятия" Click="Button_Click"></Button>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Стартовое окно" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"></TextBlock>

    </Grid>
</Page>
